{% block head %}
    <!DOCTYPE html>
    <html lang="en">
    <head>
        <title>Provo: VM Provisioner</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta name="description" content="Vagrant/Puppet GUI Configuration" />
        <meta charset="utf-8" />

        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('assets/vendor/bootstrap-3.1.1/css/lumen.min.css') }}" />
            <link rel="stylesheet" href="{{ asset('assets/vendor/font-awesome-4.2.0/css/font-awesome.min.css') }}" />
            <link rel="stylesheet" href="{{ asset('assets/vendor/selectize.js/selectize.bootstrap3.css') }}" />
            <link rel="stylesheet" href="{{ asset('assets/v4/css/style.css') }}" />
        {% endblock %}

        {% block topJs %}
