{% for flashMessage in app.session.flashbag.get('error') %}
    <div class="alert alert-danger alert-dismissable" data-dismiss="alert" aria-hidden="true">
        <button type="button" class="close" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        {{ flashMessage }}
    </div>
{% endfor %}

{% if hasCustom is defined %}
    <div class="alert alert-success alert-dismissable" data-dismiss="alert" aria-hidden="true">
        <button type="button" class="close" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        Your previously generated config file was successfully loaded!
    </div>
{% else %}
    <div class="alert alert-info alert-dismissable" data-dismiss="alert" aria-hidden="true">
        <button type="button" class="close" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <ul>
            <li>Vagrant >= 1.6 is required to run PuPHPet manifests!</li>
            <li>Have an existing PuPHPet-generated manifest? Just drag your
                <code>puphpet/config.yaml</code> file into your browser OR copy/paste the file's
                contents from your clipboard, and the form will be filled in with your previous values!</li>
        </ul>
    </div>
{% endif %}
